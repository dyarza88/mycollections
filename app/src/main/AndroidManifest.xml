<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.jrzdy.master.mycollections">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_main"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".SignUpActivity"/>
        <activity
            android:name=".MarketActivity"
            android:label="@string/title_market"/>

        <activity android:name=".PublishCollectionActivity">
        </activity>
        <activity android:name=".TablonAnuncios"/>
        <activity android:name=".EditarPerfil"/>
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".NewCollectionActivity"
            android:label="Añadir Colección"/>
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="Recuperación de contraseña"/>
        <activity
            android:name=".ImageSelectActivity"
            android:label="Seleccionar imagen"/>
        <activity
            android:name=".EditCollectionActivity"
            android:label="Coleccion"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>
        <activity
            android:name=".NuevoArticuloActivity"
            android:label="Añadir nuevo artículo">
        </activity>
        <activity
            android:name=".EditArticleActivity"
            android:label="Editar artículo"
            >
        </activity>
        <activity
            android:name=".ForoActivity"
            android:label="Foro">
        </activity>
    </application>

</manifest>